{
  "name": "simpl",
  "description": "An easy-to-use PHP, HTML, Sass and TypeScript framework!",
  "version": "1.4.0",
  "dependencies": {
    "hamburgers": "^1.2.1",
    "@fortawesome/fontawesome-free": "^6.7.2"
  },
  "devDependencies": {
    "npm": "^11.3.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.87.0",
    "typescript": "^5.8.3",
    "tslib": "^2.8.1",
    "rollup": "^4.40.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-terser": "^0.4.4",
    "browser-sync": "^3.0.4",
    "cpx": "^1.5.0"
  },
  "scripts": {
    "postinstall": "npm run build",
    "dev": "run-p watch live",
    "build": "run-p build:*",
    "build:sass": "sass -s compressed scss/main.scss public/css/main.min.css",
    "build:ts": "rollup -c",
    "build:assets": "run-p build:assets:*",
    "build:assets:fontawesome": "run-p build:assets:fontawesome:*",
    "build:assets:fontawesome:css": "cpx node_modules/@fortawesome/fontawesome-free/css/all.min.css public/assets/fontawesome/css/",
    "build:assets:fontawesome:webfonts": "cpx node_modules/@fortawesome/fontawesome-free/webfonts/**/* public/assets/fontawesome/webfonts/",
    "build:assets:hamburgers": "cpx node_modules/hamburgers/dist/hamburgers.min.css public/assets/hamburgers/css/",
    "watch": "run-p watch:*",
    "watch:sass": "sass -w --update -s compressed scss/main.scss public/css/main.min.css",
    "watch:ts": "rollup -c -w",
    "live": "browser-sync start --open external --host simpl.local -p simpl.local -f public views -w --no-notify --no-ui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IJuanTM/simpl"
  },
  "keywords": [
    "php",
    "html",
    "sass",
    "typescript",
    "framework",
    "mvc"
  ],
  "author": "Iwan van der Wal",
  "license": "GPL-3.0-only",
  "homepage": "https://simpl.iwanvanderwal.nl"
}
