{
  "name": "simpl",
  "description": "An easy-to-use PHP, HTML, Sass and TypeScript framework!",
  "version": "1.4.0",
  "dependencies": {
    "the-new-css-reset": "^1.11.3",
    "hamburgers": "^1.2.1",
    "@fortawesome/fontawesome-free": "^7.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "sass": "^1.90.0",
    "typescript": "^5.9.2",
    "tslib": "^2.8.1",
    "rollup": "^4.48.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@rollup/plugin-terser": "^0.4.4",
    "browser-sync": "^3.0.4",
    "cpy-cli": "^6.0.0",
    "mjml": "^4.15.3"
  },
  "scripts": {
    "postinstall": "npm run build",
    "dev": "run-p watch live",
    "build": "run-p build:*",
    "build:sass": "sass -s compressed scss/main.scss public/css/main.min.css",
    "build:ts": "rollup -c",
    "build:assets": "run-p build:assets:*",
    "build:assets:the-new-css-reset": "cpy --flat node_modules/the-new-css-reset/css/reset.css public/assets/the-new-css-reset/css/",
    "build:assets:fontawesome": "run-p build:assets:fontawesome:*",
    "build:assets:fontawesome:css": "cpy --flat node_modules/@fortawesome/fontawesome-free/css/all.min.css public/assets/fontawesome/css/",
    "build:assets:fontawesome:webfonts": "cpy --flat node_modules/@fortawesome/fontawesome-free/webfonts/* public/assets/fontawesome/webfonts/",
    "build:assets:hamburgers": "cpy --flat node_modules/hamburgers/dist/hamburgers.min.css public/assets/hamburgers/css/",
    "watch": "run-p watch:*",
    "watch:sass": "sass -w --update -s compressed scss/main.scss public/css/main.min.css",
    "watch:ts": "rollup -c -w",
    "live": "browser-sync start --open external --host simpl.local -p simpl.local -f public views -w --no-notify --no-ui",
    "mjml": "mjml app/Mails/templates/*.mjml -o app/Mails/html --config.beautify false --config.minify true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IJuanTM/simpl/"
  },
  "keywords": [
    "php",
    "html",
    "sass",
    "typescript",
    "framework",
    "mvc"
  ],
  "author": "Iwan van der Wal",
  "license": "GPL-3.0-only",
  "homepage": "https://simpl.iwanvanderwal.nl/"
}
